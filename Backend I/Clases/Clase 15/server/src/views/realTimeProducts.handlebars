<header>
    <h1>Home - Productos</h1>
</header>

<main>
    <section>
        <h3>Productos</h3>
        <div>
            <ul id="products-list"></ul>
        </div>
    </section>
    <section>
        <h3>Formulario Producto: </h3>
        <form id="products-form">
            <input type="text" name="title" placeholder="Ingresa el titulo"><br>
            <input type="text" name="description" placeholder="Ingresa pequeña descripción"><br>
            <input type="text" name="code" placeholder="Ingresa código identificador"><br>
            <input type="number" name="price" placeholder="Ingresa el precio"><br>
            <div>¿Está activo (status)?<input type="checkbox" name="status"></div>
            <input type="number" name="stock" placeholder="Ingresa el stock del producto"><br>
            <input type="text" name="category" placeholder="Ingresa categoría"><br>
            <input type="submit" value="Guardar">
        </form>
    </section>
    <section>
        <h3>Eliminar Producto</h3>
        <div>
            <input type="number" id="input-product-id"><br>
            <button id="btn-delete-product">Eliminar</button>
        </div>
    </section>
    <p id="error-message" class="error-msg"></p>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/api/public/js/products.socket.js"></script>